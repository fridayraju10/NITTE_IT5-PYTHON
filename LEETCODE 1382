# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right

class Solution(object):
    def __init__(self):
        self.values = []

    def inorder(self, root):
        if root is None:
            return
        self.inorder(root.left)
        self.values.append(root.val)  
        self.inorder(root.right)

    def createBST(self, values, x, y):
        if x > y:
            return None
        mid = (x + y) // 2
        root = TreeNode(values[mid])  
        root.left = self.createBST(values, x, mid - 1)
        root.right = self.createBST(values, mid + 1, y)
        return root

    def balanceBST(self, root):
        self.inorder(root)
        newnode=self.createBST(self.values, 0, len(self.values) - 1)
        return newnode
